<header class="border shadow-sm">
    <nav class="navbar navbar-expand-sm navbar-light py-3" 
        style="background: linear-gradient(90deg, #e0169c9a, #ff9800, #ff3bdb); box-shadow: 0px 6px 20px rgba(0, 0, 0, 0.5);">
        <div class="container-fluid d-flex align-items-center">
            
            <!-- Logo & Brand Name -->
			<a href="/" class="d-flex align-items-center text-decoration-none ms-5"> <!-- Increased left margin -->
				<img src="/assets/images/logo.jpg" alt="logo" class="rounded-circle border border-light shadow" 
					style="height: 65px; width: 65px; border-width: 3px;">
				<span class="navbar-brand text-white fw-bold ps-3 text-uppercase" 
					style="font-size: 2rem; letter-spacing: 2px; text-shadow: 3px 3px 6px rgba(0,0,0,0.4); font-family: 'Poppins', sans-serif;">
					Meal Mission
				</span>
			</a>
			

            <!-- Navbar Toggler -->
            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fas fa-bars text-white" style="font-size: 1.8rem;"></i>
            </button>

            <!-- Navbar Items -->
            <div class="collapse navbar-collapse justify-content-end" id="navbarContent">
                <ul class="navbar-nav me-4">
                    <li class="nav-item">
                        <a class="nav-link text-white fw-bold px-3 nav-hover  fs-4" href="/home/about-us">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white fw-bold px-3 nav-hover  fs-4" href="/home/mission">Our Mission</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white fw-bold px-3 nav-hover  fs-4" href="/home/contact-us">Contact Us</a>
                    </li>

                    <% if(currentUser) { %>
                    <li class="user-icon d-flex align-items-center justify-content-center text-white fw-bold"
                        style="background: black; color: #ff3d00; width: 50px; height: 50px; border-radius: 50%;
                        font-size: 1.5rem; box-shadow: 0px 0px 15px rgba(255,255,255,0.7); margin-left: 20px;">
                        <%= currentUser.firstName[0] %>
                    </li>
                    <% } else { %>
                    <li class="nav-item">
                        <a class="nav-link btn fw-bold px-3 py-2 login-btn  fs-4" href="/auth/login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn fw-bold px-3 py-2 signup-btn  fs-4" href="/auth/signup">Signup</a>
                    </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>
</header>

<style>
    .nav-hover {
        font-size: 1.3rem;
        transition: all 0.3s ease-in-out;
    }
    .nav-hover:hover {
        color: #000 !important;
        text-shadow: 2px 2px 10px rgba(255,255,255,0.9);
    }
    .login-btn {
        background: linear-gradient(135deg, #ff758c, #ff7eb3);
        color: #ff3d00;
        border-radius: 10px;
        font-size: 1.2rem;
        margin-left: 10px;
        transition: all 0.3s ease-in-out;
        box-shadow: 0px 4px 10px rgba(255, 255, 255, 0.5);
    }
    .login-btn:hover {
        background: rgba(255,235,59,0.9);
        color: #000;
    }
    .signup-btn {
        background:linear-gradient(135deg, #ff758c, #ff7eb3);
        border-radius: 10px;
        font-size: 1.2rem;
        margin-left: 10px;
        transition: all 0.3s ease-in-out;
        box-shadow: 0px 4px 10px rgba(255, 235, 59, 0.6);
    }
    .signup-btn:hover {
        background: rgba(255,255,255,0.9);
        color: #000;
    }
</style>
