<main>
	<%- include('../partials/donorSidebar') %>
	
	<div id="main-wrapper" class="mt-12">
		
		<div class="bg-primary text-white shadow-sm p-3 mt-2 rounded-3 d-flex align-items-center">
            <span class="me-3" id="sidebar-toggler-btn"><i class="fas fa-bars text-white"></i></span>
            <h5 class="m-0 bg-white text-primary ps-4 pe-4 pt-2 pb-2 rounded-2">Dashboard</h5>
        </div>
		
		<div class="d-flex gap-4 flex-wrap p-5 mt-5 text-white text-center">
			
			<div class="rounded-3 p-5 shadow-lg" style="width: 500px; background: linear-gradient(135deg, #dc3545, #ff8080);">
				<div class="fs-1 fw-bold"><%= numCollectedDonations %></div>
				<div class="fs-5">Donations by You</div>
			</div>
			
			<div class="rounded-3 p-5 shadow-lg ms-5" style="width: 500px; background: linear-gradient(135deg, #28a745, #85e085);">
				<div class="fs-1 fw-bold"><%= numPendingDonations %></div>
				<div class="fs-5">Donation Requests Not Processed Yet</div>
			</div>
			
			<div class="rounded-3 p-5 shadow-lg mt-5" style="width: 500px; background: linear-gradient(135deg, #007bff, #66b3ff);">
				<div class="fs-1 fw-bold"><%= numAcceptedDonations %></div>
				<div class="fs-5">Donations Accepted & To Be Assigned to Agent</div>
			</div>
			
			<div class="rounded-3 p-5 shadow-lg mt-5 ms-5" style="width: 500px; background: linear-gradient(135deg, #dc3545, #ff8080);">
				<div class="fs-1 fw-bold"><%= numAssignedDonations %></div>
				<div class="fs-5">Donations Not Collected Yet</div>
			</div>
			
		</div>
		
	</div>
</main>
