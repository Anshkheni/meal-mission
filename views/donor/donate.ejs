<main class="bg-light min-vh-100">
    <%- include('../partials/donorSidebar') %>

    <div id="main-wrapper" class="mt-12">
        <div class="bg-primary text-white shadow-sm p-3 mt-2 rounded-3 d-flex align-items-center">
            <span class="me-3" id="sidebar-toggler-btn"><i class="fas fa-bars text-white"></i></span>
            <h5 class="m-0 bg-white text-primary ps-4 pe-4 pt-2 pb-2 rounded-2">Donate</h5>
        </div>

        <form action="/donor/donate" method="POST" class="border m-4 my-3 p-4 bg-white rounded-3 shadow-lg animate__animated animate__fadeInUp">
            <h2 class="text-center mb-4 text-primary">Donate Food</h2>
            
            <div class="mb-4">
                <label for="food" class="form-label fw-bold">Food Type</label>
                <input type="text" name="donation[foodType]" class="form-control" id="food" placeholder="Enter food.." required autofocus>
            </div>
        
            <div class="row">
                <div class="mb-4 col-md-6">
                    <label for="quantity" class="form-label fw-bold">Quantity</label>
                    <input type="text" name="donation[quantity]" class="form-control" id="quantity" placeholder="Enter quantity of food.." required>
                </div>
                <div class="mb-4 col-md-6">
                    <label for="time" class="form-label fw-bold">Time of Cooking</label>
                    <input type="datetime-local" name="donation[cookingTime]" class="form-control" id="time" required>
                </div>
            </div>
        
            <div class="row">
                <div class="mb-4 col-md-8">
                    <label for="address" class="form-label fw-bold">Address to Collect</label>
                    <input type="text" name="donation[address]" class="form-control" id="address" placeholder="Enter address.." value="<%= currentUser.address %>" required>
                </div>
                <div class="mb-4 col-md-4">
                    <label for="phone" class="form-label fw-bold">Phone</label>
                    <input type="number" name="donation[phone]" class="form-control" id="phone" placeholder="Enter phone.." value="<%= currentUser.phone %>" required>
                </div>
            </div>
        
            <div class="mb-4">
                <label for="msg" class="form-label fw-bold">Want to write some message?</label>
                <textarea name="donation[donorToAdminMsg]" class="form-control" id="msg" placeholder="You can write here some msg.."></textarea>
            </div>
        
            <button type="submit" class="btn btn-primary w-75 d-block m-auto mt-4 shadow-sm">Submit</button>
        </form>
        
    </div>
</main>

<script>
    const d = new Date();
    const dateString = d.getFullYear() + "-" + ("0" + (d.getMonth() + 1)).slice(-2) + "-" + ("0" + d.getDate()).slice(-2) + "T" + ("0" + d.getHours()).slice(-2) + ":" + ("0" + d.getMinutes()).slice(-2);
    document.getElementById("time").value = dateString;

    document.getElementById("time").setAttribute("max", dateString);
</script>